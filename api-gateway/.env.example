# Environment Configuration for 50BraIns API Gateway

# Server Configuration
PORT=3000
NODE_ENV=development

# Service URLs
AUTH_SERVICE_URL=http://localhost:4001
USER_SERVICE_URL=http://localhost:4002
ADMIN_SERVICE_URL=http://localhost:4003

# Redis Configuration (for caching and rate limiting)
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=
REDIS_DB=0

# Security Configuration
JWT_SECRET=dev-jwt-secret-key-not-for-production-change-this
JWT_REFRESH_SECRET=dev-jwt-refresh-secret-key-not-for-production-change-this
ENCRYPTION_KEY=your-32-character-encryption-key-here

# CORS Configuration
CORS_ORIGINS=http://localhost:5173,http://localhost:3001,https://app.50brains.com,https://50brains.com

# Rate Limiting Configuration
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX=100
RATE_LIMIT_AUTH_MAX=20

# Monitoring Configuration
ENABLE_MONITORING=true
MONITORING_PATH=/status

# Logging Configuration
LOG_LEVEL=info
LOG_FORMAT=combined

# Performance Configuration
ENABLE_COMPRESSION=true
ENABLE_CLUSTERING=true
MAX_CLUSTERS=0

# Health Check Configuration
HEALTH_CHECK_INTERVAL=30000
HEALTH_CHECK_TIMEOUT=5000

# Proxy Configuration
PROXY_TIMEOUT=30000
PROXY_RETRY_ATTEMPTS=3
PROXY_RETRY_DELAY=1000

# Cache Configuration
CACHE_TTL=300
ENABLE_RESPONSE_CACHE=true

# SSL Configuration (for production)
SSL_CERT_PATH=
SSL_KEY_PATH=
FORCE_HTTPS=false
