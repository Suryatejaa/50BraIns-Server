{
  "name": "50brains-api-gateway",
  "version": "1.0.0",
  "description": "High-performance Express-based API Gateway for 50BraIns microservices architecture",
  "main": "src/server.js",
  "scripts": {
    "start": "node src/server.js",
    "dev": "nodemon src/server.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src/**/*.js",
    "lint:fix": "eslint src/**/*.js --fix",
    "format": "prettier --write src/**/*.js",
    "docker:build": "docker build -t 50brains-api-gateway .",
    "docker:run": "docker run -p 3000:3000 50brains-api-gateway",
    "cluster": "NODE_ENV=production ENABLE_CLUSTERING=true node src/server.js"
  },
  "keywords": [
    "api-gateway",
    "microservices",
    "express",
    "proxy",
    "cors",
    "rate-limiting",
    "authentication",
    "monitoring",
    "50brains"
  ],
  "author": "50BraIns Team",
  "license": "MIT",
  "dependencies": {
    "axios": "^1.11.0",
    "compression": "^1.7.4",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-mongo-sanitize": "^2.2.0",
    "express-rate-limit": "^7.1.5",
    "express-slow-down": "^2.0.1",
    "helmet": "^7.1.0",
    "hpp": "^0.2.3",
    "http-proxy-middleware": "^2.0.6",
    "joi": "^17.11.0",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.0",
    "prom-client": "^15.1.0",
    "winston": "^3.11.0",
    "ws": "^8.18.3",
    "xss": "^1.0.14"
  },
  "devDependencies": {
    "@types/jest": "^29.5.8",
    "eslint": "^8.55.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-plugin-import": "^2.29.0",
    "jest": "^29.7.0",
    "nodemon": "^3.0.2",
    "prettier": "^3.1.0",
    "supertest": "^6.3.3"
  },
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=8.0.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/50brains/50BraIns-Server.git"
  },
  "bugs": {
    "url": "https://github.com/50brains/50BraIns-Server/issues"
  },
  "homepage": "https://github.com/50brains/50BraIns-Server#readme"
}
