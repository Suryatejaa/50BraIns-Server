# Environment Configuration
NODE_ENV=development
PORT=4005

# Database Configuration
DATABASE_URL="postgresql://username:password@localhost:5432/credits_db"

# JWT Configuration (for API Gateway integration)
JWT_SECRET=your-jwt-secret-key-here

# Service URLs
USER_SERVICE_URL=http://localhost:4002
GIG_SERVICE_URL=http://localhost:4004
CLAN_SERVICE_URL=http://localhost:4003

# Payment Gateway Configuration
# Razorpay
RAZORPAY_KEY_ID=your-razorpay-key-id
RAZORPAY_KEY_SECRET=your-razorpay-key-secret
RAZORPAY_WEBHOOK_SECRET=your-razorpay-webhook-secret

# Stripe
STRIPE_PUBLISHABLE_KEY=your-stripe-publishable-key
STRIPE_SECRET_KEY=your-stripe-secret-key
STRIPE_WEBHOOK_SECRET=your-stripe-webhook-secret

# Credit Package Configuration
DEFAULT_CREDIT_PACKAGES=100,500,1000,2500,5000
CREDIT_TO_INR_RATE=1
PLATFORM_COMMISSION_RATE=0.15

# Boost Configuration
PROFILE_BOOST_COST=50
GIG_BOOST_COST=100
CLAN_BOOST_COST=75
BOOST_DURATION_HOURS=168

# Security Configuration
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging Configuration
LOG_LEVEL=info
LOG_FILE_PATH=./logs/credit-service.log
