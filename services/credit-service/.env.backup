# Credit Service Configuration
NODE_ENV=development
PORT=4005

# Database Configuration (PostgreSQL)
DATABASE_URL="postgresql://postgres:Surya@2001@localhost:5432/brains_credit?schema=credits"

# API Gateway Configuration
API_GATEWAY_URL=http://localhost:3000

# Service URLs (for inter-service communication)
USER_SERVICE_URL=http://localhost:4002
GIG_SERVICE_URL=http://localhost:4004
CLAN_SERVICE_URL=http://localhost:4003

# RabbitMQ Configuration
RABBITMQ_URL=amqp://admin:admin123@localhost
RABBITMQ_DEFAULT_USER=admin
RABBITMQ_DEFAULT_PASS=admin123
RABBITMQ_EXCHANGE=50brains-events
RABBITMQ_BOOST_QUEUE=boost-events
RABBITMQ_CREDIT_QUEUE=credit-events

# Payment Gateway Configuration
# Razorpay
RAZORPAY_KEY_ID=your_razorpay_key_id
RAZORPAY_KEY_SECRET=your_razorpay_key_secret

# Stripe
STRIPE_PUBLISHABLE_KEY=your_stripe_publishable_key
STRIPE_SECRET_KEY=your_stripe_secret_key

# Credit Configuration
DEFAULT_BOOST_DURATION_HOURS=48
PROFILE_BOOST_COST=5
GIG_BOOST_COST=7
CLAN_BOOST_COST=40

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Security
JWT_SECRET=your-super-secret-jwt-key-change-in-production
BCRYPT_ROUNDS=12

# Logging
LOG_LEVEL=debug
ENABLE_REQUEST_LOGGING=true
