# Clan Service Environment Configuration - Production Ready
PORT=4003
NODE_ENV=development

# Database Configuration
DATABASE_URL=postgresql://postgres:Surya@2001@localhost:5432/brains_clan?schema=public

# RabbitMQ Configuration (Updated with credentials)
RABBITMQ_URL=amqp://admin:admin123@localhost
RABBITMQ_EXCHANGE=brains_events
RABBITMQ_QUEUE_CLAN=clan_events
RABBITMQ_QUEUE_CLAN_ANALYTICS=clan_analytics_events

# JWT Configuration (for token verification - must match other services)
JWT_SECRET=dev-jwt-secret-key-not-for-production-change-this
JWT_REFRESH_SECRET=dev-jwt-refresh-secret-key-not-for-production-change-this

# API Gateway URL
GATEWAY_URL=http://localhost:3000

# Redis Configuration (for caching)
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=
REDIS_DB=3

# External Services
USER_SERVICE_URL=http://localhost:4001
AUTH_SERVICE_URL=http://localhost:4000
GIG_SERVICE_URL=http://localhost:4004

# Analytics
ANALYTICS_SERVICE_URL=http://localhost:4006

# Storage Configuration
UPLOAD_MAX_SIZE=10485760  # 10MB
ALLOWED_IMAGE_TYPES=jpg,jpeg,png,webp
ALLOWED_VIDEO_TYPES=mp4,avi,mov

# Email Configuration (for notifications)
EMAIL_FROM=noreply@50brains.com
EMAIL_SUPPORT=support@50brains.com

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000  # 15 minutes
RATE_LIMIT_MAX_REQUESTS=100

# Monitoring
HEALTH_CHECK_INTERVAL=30000  # 30 seconds
METRICS_ENABLED=true

# Logging
LOG_LEVEL=debug
LOG_FILE_PATH=./logs/clan-service.log
LOG_MAX_FILES=30
LOG_MAX_SIZE=100m

# Cache Settings
CACHE_TTL_DEFAULT=300        # 5 minutes
CACHE_TTL_CLAN_LIST=60       # 1 minute
CACHE_TTL_ANALYTICS=1800     # 30 minutes

# Notification Settings
NOTIFICATIONS_ENABLED=true
WEBHOOK_ENABLED=false
WEBHOOK_URL=
