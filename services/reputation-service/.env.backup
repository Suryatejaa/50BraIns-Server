# Reputation Service Configuration
NODE_ENV=development
PORT=4006

# Database
DATABASE_URL=postgresql://postgres:Surya@2001@localhost:5432/brains_reputation?schema=public

# RabbitMQ Configuration
RABBITMQ_URL=amqp://admin:admin123@localhost
RABBITMQ_EXCHANGE=brains_events
RABBITMQ_QUEUE=reputation_events_queue

# Redis Configuration (for caching leaderboards)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# Scoring Configuration
SCORE_GIG_COMPLETED=10
SCORE_GIG_POSTED=2
SCORE_BOOST_RECEIVED=5
SCORE_BOOST_GIVEN=1
SCORE_RATING_MULTIPLIER=20
SCORE_PROFILE_VIEW=0.1
SCORE_CONNECTION=1

# Tier Thresholds
TIER_BRONZE_MIN=0
TIER_SILVER_MIN=100
TIER_GOLD_MIN=500
TIER_PLATINUM_MIN=1500
TIER_DIAMOND_MIN=5000
TIER_LEGEND_MIN=15000

# Score Decay
ENABLE_SCORE_DECAY=false
DECAY_RATE=0.02
DECAY_INTERVAL_DAYS=30

# Cache Settings
LEADERBOARD_CACHE_TTL=3600
SCORE_CACHE_TTL=300

# Security
JWT_SECRET=reputation-jwt-secret-change-in-production
API_RATE_LIMIT=100

# Logging
LOG_LEVEL=info
LOG_FILE=logs/reputation.log
