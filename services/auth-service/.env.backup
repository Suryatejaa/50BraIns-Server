# =============================================================================
# 50BraIns Auth Service - Environment Configuration
# =============================================================================

# Server Configuration
NODE_ENV=development
PORT=4001
SERVICE_NAME=auth-service
VERSION=1.0.0

# Database Configuration
DATABASE_URL=postgresql://postgres:Surya@2001@localhost:5432/brains_auth?schema=public
RABBITMQ_URL=amqp://admin:admin123@localhost
# JWT Configuration
JWT_SECRET=dev-jwt-secret-key-not-for-production-change-this
JWT_REFRESH_SECRET=dev-jwt-refresh-secret-key-not-for-production-change-this
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# Redis Configuration (Optional - Falls back to memory if unavailable)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# Security Configuration
BCRYPT_ROUNDS=12
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:5173,http://localhost:3001

# Email Configuration (for email verification)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
EMAIL_FROM=noreply@50brains.com

# 2FA Configuration
APP_NAME=50BraIns
TOTP_WINDOW=2

# File Upload Configuration
MAX_FILE_SIZE=5242880
UPLOAD_PATH=./uploads

# Logging Configuration
LOG_LEVEL=info
LOG_FILE=./logs/auth-service.log

# Monitoring
HEALTH_CHECK_TIMEOUT=5000

# Development Configuration
PRISMA_STUDIO_PORT=5555
