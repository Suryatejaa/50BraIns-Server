# Database Configuration
DATABASE_URL=postgresql://postgres:password@localhost:5432/brains_notifications?schema=public

# Server Configuration
PORT=4009
NODE_ENV=development

# RabbitMQ Configuration
RABBITMQ_URL="amqp://admin:admin123@localhost:5672"

# Redis Configuration (for job queues)
REDIS_URL=redis://localhost:6379

# Email Configuration (SMTP)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=noreply@50brains.com
SMTP_PASS=your_smtp_password_here

# Email Settings
FROM_EMAIL=noreply@50brains.com
FROM_NAME=50BraIns Platform
REPLY_TO_EMAIL=support@50brains.com

# Feature Flags
ENABLE_EMAIL_NOTIFICATIONS=true
ENABLE_IN_APP_NOTIFICATIONS=true
ENABLE_PUSH_NOTIFICATIONS=false
ENABLE_SMS_NOTIFICATIONS=false

# Retry Configuration
MAX_EMAIL_RETRIES=3
EMAIL_RETRY_DELAY_MS=60000
NOTIFICATION_BATCH_SIZE=100

# Rate Limiting
EMAIL_RATE_LIMIT_PER_HOUR=1000
NOTIFICATION_RATE_LIMIT_PER_MINUTE=100

# Template Configuration
EMAIL_TEMPLATE_PATH=./src/mailers/templates
DEFAULT_TEMPLATE_LANGUAGE=en

# External Service URLs
USER_SERVICE_URL=http://localhost:4002
CLAN_SERVICE_URL=http://localhost:4003
GIG_SERVICE_URL=http://localhost:4004
CREDIT_SERVICE_URL=http://localhost:4005

# Security
JWT_SECRET=your-notification-service-jwt-secret-change-in-production
API_KEY=your-internal-api-key-change-in-production

# Logging
LOG_LEVEL=info
ENABLE_REQUEST_LOGGING=true
LOG_FILE_PATH=./logs/notification-service.log
