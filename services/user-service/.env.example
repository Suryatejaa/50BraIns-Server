# Server Configuration
PORT=4002
NODE_ENV=development

# Database - SHARED with auth-service (same database, read-focused)
DATABASE_URL="postgresql://postgres:password@localhost:5432/brains_auth?schema=public"

# JWT (for token verification - must match auth-service)
JWT_SECRET=dev-jwt-secret-key-not-for-production-change-this
JWT_REFRESH_SECRET=dev-jwt-refresh-secret-key-not-for-production-change-this
JWT_EXPIRY=15m
JWT_REFRESH_EXPIRY=7d

RABBITMQ_URL=amqp://admin:admin123@localhost
RABBITMQ_DEFAULT_USER=admin
RABBITMQ_DEFAULT_PASS=admin123
# Logging
LOG_LEVEL=debug

# Services
AUTH_SERVICE_URL=http://localhost:4001
GATEWAY_URL=http://localhost:3000
